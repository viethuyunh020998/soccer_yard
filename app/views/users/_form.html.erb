<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", objects: @user %>
  <%= f.label :name, t("form.name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t("form.email") %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password, t("form.password") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("form.passconfi") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.label :phone, t("form.phone") %>
  <%= f.text_field :phone, class: "form-control" %>
  <%= f.label :image, t("form.image") %>
  <%= f.file_field :image, class: "form-field" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
